{
  "name": "lykke-exchange-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/react-copy-to-clipboard": "^4.2.3",
    "antd": "^2.13.3",
    "classnames": "^2.2.5",
    "mobx": "^3.3.0",
    "mobx-react": "^4.3.2",
    "numeral": "^2.0.6",
    "react": "^16.0.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2",
    "react-scripts-ts": "2.8.0",
    "react-select": "^1.0.0-rc.10",
    "react-text-mask": "^5.0.2",
    "sha.js": "^2.4.9",
    "text-mask-addons": "^3.7.1",
    "uuid": "^3.1.0",
    "wretch": "^1.0.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-ts",
    "build": "npm run build-css && react-scripts-ts build",
    "serve-build": "forever start -s ./node_modules/.bin/http-server ./build -s -p 3099",
    "e2e-setup": "cd e2e && git clone https://github.com/webdriverio/cucumber-boilerplate",
    "test": "react-scripts-ts test --env=jsdom",
    "test-e2e": "yarn run wdio ./e2e/wdio.dev.conf.js",
    "test-e2e-build": "yarn run serve-build && yarn run wdio ./e2e/wdio.build.conf.js",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "webdriverio": "^4.9.11",
    "@types/classnames": "^2.2.3",
    "@types/jest": "^21.1.1",
    "@types/node": "^8.0.31",
    "@types/numeral": "^0.0.22",
    "@types/react": "^16.0.18",
    "@types/react-dom": "^16.0.2",
    "@types/react-router-dom": "^4.0.8",
    "@types/react-select": "^1.0.59",
    "@types/uuid": "^3.4.3",
    "LykkeFramework": "^0.3.40",
    "chai": "^4.1.2",
    "compass-mixins": "0.12.10",
    "forever": "^0.15.3",
    "http-server": "^0.10.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.0",
    "tslint-config-prettier": "^1.5.0",
    "wdio-cucumber-framework": "^1.0.2",
    "wdio-phantomjs-service": "^0.2.2",
    "wdio-selenium-standalone-service": "^0.0.9",
    "wdio-spec-reporter": "^0.1.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,css,scss,sass}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": "tslint --fix"
  }
}
